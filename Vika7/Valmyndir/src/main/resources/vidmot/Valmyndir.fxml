<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="fxAnchorPane" onContextMenuRequested="#contextHandler" prefHeight="200" prefWidth="320"
            xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="vidmot.ValmyndirController">
    <children>
        <MenuBar prefHeight="49.0" prefWidth="320.0">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#newHandler" text="New"/>
                        <SeparatorMenuItem mnemonicParsing="false"/>
                        <MenuItem mnemonicParsing="false" onAction="#closeHandler" text="Close"/>
                        <Menu mnemonicParsing="false" text="Cascading">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#fxCascadingHandler" text="Action 1"/>
                            </items>
                        </Menu>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Delete"/>
                        <RadioMenuItem mnemonicParsing="false" text="Radio 1"/>
                        <RadioMenuItem mnemonicParsing="false" text="Radio 2"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem onAction="#fxAboutHandler" mnemonicParsing="false" text="About"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <TextField fx:id="fxTexti" layoutX="14.0" layoutY="100.0">
            <contextMenu>
                <ContextMenu>
                    <items>
                        <MenuItem mnemonicParsing="false" text="Complete"/>
                        <MenuItem mnemonicParsing="false" onAction="#translateHandler" text="Translate"/>
                    </items>
                </ContextMenu>
            </contextMenu>
        </TextField>
        <Label fx:id="fxValid" layoutX="14.0" layoutY="155.0" prefHeight="25.0" prefWidth="149.0"/>
    </children>
</AnchorPane>
